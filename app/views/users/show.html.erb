<h1>Hey there, <%= @user.first_name %>!</h1>

<%= link_to "Create new event", new_event_path %>

<h2>Created Events</h2>

<% if @user.created_events.any? %>
  <ul>
    <% @user.created_events.each do |created_event| %>
      <li>
        <%= link_to created_event.name, created_event %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>You haven't created any events yet.</p>
<% end %>